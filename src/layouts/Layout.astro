---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/martian-mono';
// Supports weights 100-900
import '@fontsource-variable/noto-sans';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Audiovisual Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/ppfavicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- youtube Lite -->
		<script type="module" src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1.5.0/lite-youtube.js"></script>
		<!-- vimeo Lite -->
		<script type="module" src="https://cdn.jsdelivr.net/npm/lite-vimeo-embed/+esm"></script>
	</head>
	<body>
		<div class="">
			<Header class="fixed"/>
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		background: #0F0F0F;
		scroll-behavior: smooth;
		color: white;
	}

	body {
		font-family: 'Martian Mono Variable', monospace;
		min-height: 100vh;
		overscroll-behavior: none;
	}

	#description {
		font-family: 'Noto Sans Variable', sans-serif;
	}

	.custom-shadow {
		box-shadow: 9px 9px 0px 0px rgba(99,99,99,1);
	}

	.custom-shadow-sm {
		box-shadow: 5px 4px 0px 0px rgba(99,99,99,1);
	}

	.custom-shadow-ex {
		box-shadow: 5px 4px 0px 0px rgba(255,255,255,1);
	}

	
	.custom-shadow-wh {
		box-shadow: 2px 2px 0px 0px rgba(255,255,255,1);
	}

	.custom-shadow-cv {
		box-shadow: 5px 4px 0px 0px rgba(255,67,211,1);
	}

</style>
